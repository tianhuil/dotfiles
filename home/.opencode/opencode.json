{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-69a0330b-698d-4a7a-9c36-15f0acf6d0a8"
      },
      "enabled": true,
      "timeout": 5000
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 5000
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--enable-web-dashboard",
        "False"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "sequential_thinking": {
      "type": "local",
      "command": [
        "bunx",
        "-y",
        "@wemake.cx/sequential-thinking@latest"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "playwright": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "mcp-playwright",
        "playwright"
      ],
      "enabled": true,
      "timeout": 10000
    }
  },
  "tools": {
    "context7": true,
    "gh_grep": true,
    "serena": true,
    "sequential_thinking": true,
    "playwright": true
  },
  "provider": {
    "google-vertex-ai": {
      "models": {
        "gemini-2.5-flash": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 8192,
              "includeThoughts": true
            }
          }
        },
        "gemini-2.5-pro": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 8192,
              "includeThoughts": true
            }
          }
        },
        "gemini-3-flash": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        },
        "gemini-2.5-flash-lite": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "low",
              "includeThoughts": true
            }
          }
        },
        "gemini-3-pro-preview": {
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "high",
              "includeThoughts": true
            }
          }
        }
      }
    }
  }
}
